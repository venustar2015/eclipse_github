<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"    android:orientation="vertical"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="#5E5E5E"    android:id="@+id/audioPage">        <TextView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:lines="1"        android:gravity="center_vertical"        android:textColor="#FFFFFF"        android:layout_weight="0.5"        android:layout_marginTop="1dp"        android:background="#5E5E5E"        android:id="@+id/vibration_information"        android:text="@string/vibration_information" />        <SurfaceView        android:layout_width="match_parent"        android:layout_marginTop="1dp"        android:layout_height="0dp"        android:layout_weight="15"        android:id="@+id/sv_vibration"/>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="1.4"        android:orientation="vertical"        android:gravity="center_vertical">        <SeekBar            android:progressDrawable="@drawable/seekbar"            android:layout_width="match_parent"            android:layout_height="16dp"            android:thumb="@drawable/seekbar_thumb"            android:maxHeight="5dp"            android:minHeight="5dp"            android:thumbOffset="8dp"            android:id="@+id/seekbar_vibration"/>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:orientation="horizontal"        android:layout_weight="2"        android:background="#B7B7B7"        android:id="@+id/audio_play_control_bar">        <TextView            android:textColor="#FFFFFF"            android:layout_marginBottom="3dp"            android:gravity="center"            android:layout_width="0dp"            android:layout_weight="1.5"            android:background="@drawable/tool_button"            android:layout_height="match_parent"            android:textSize="10dp"            android:id="@+id/timeview_vibration"            android:text="@string/time_player"/>        <ImageButton            android:textColor="#FFFFFF"            android:layout_marginBottom="3dp"            android:scaleType="fitCenter"            android:layout_width="0dp"            android:layout_weight="1"            android:src="@drawable/play_previous"            android:background="@drawable/tool_button"            android:layout_height="match_parent"            android:clickable="true"            android:id="@+id/play_previous_vibration"/>        <ImageButton            android:textColor="#FFFFFF"            android:layout_marginBottom="3dp"            android:scaleType="fitCenter"            android:layout_width="0dp"            android:layout_weight="1"            android:src="@drawable/play"            android:background="@drawable/tool_button"            android:layout_height="match_parent"            android:clickable="true"            android:id="@+id/play_vibration"/>        <ImageButton            android:textColor="#FFFFFF"            android:layout_marginBottom="3dp"            android:scaleType="fitCenter"            android:layout_width="0dp"            android:layout_weight="1"            android:src="@drawable/play_next"            android:background="@drawable/tool_button"            android:layout_height="match_parent"            android:clickable="true"            android:id="@+id/play_next_vibration"/>        <ImageButton            android:textColor="#FFFFFF"            android:layout_marginBottom="3dp"            android:scaleType="fitCenter"            android:layout_width="0dp"            android:src="@drawable/replay"            android:layout_height="match_parent"            android:layout_weight="1"            android:background="@drawable/tool_button"            android:clickable="true"            android:id="@+id/replay_vibration"/>        <ImageButton            android:textColor="#FFFFFF"            android:layout_marginBottom="3dp"            android:scaleType="fitCenter"            android:layout_width="0dp"            android:layout_weight="1"            android:src="@drawable/fullscreen"            android:background="@drawable/tool_button"            android:layout_height="match_parent"            android:text="@string/fullscreen"            android:clickable="true"            android:id="@+id/fullscreen_vibration"/>        <ImageButton            android:textColor="#FFFFFF"            android:layout_marginBottom="3dp"            android:scaleType="fitCenter"            android:layout_width="0dp"            android:layout_weight="1"            android:src="@drawable/other_commands"            android:background="@drawable/tool_button"            android:layout_height="match_parent"            android:clickable="true"            android:id="@+id/other_commands_vibration"/>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="0dp"        android:layout_weight="12"        android:orientation="horizontal"        android:background="#B7B7B7">        <ScrollView            android:scrollbars="none"            android:layout_width="0dp"            android:layout_weight="10"            android:background="#FFFFFF"            android:layout_height="match_parent"            android:layout_marginBottom="3dp"            android:id="@+id/scroll_vibration">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:orientation="horizontal">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:gravity="center_horizontal"                    android:background="#5E5E5E"                    android:paddingTop="2.5dp"                    android:textSize="12dp"                    android:paddingLeft="0dp"                    android:paddingRight="0dp"                    android:lineSpacingExtra="7.5dp"                    android:id="@+id/code_line_vibration"/>                <LinearLayout                    android:layout_width="0dp"                    android:layout_weight="15"                    android:layout_height="match_parent"                    android:orientation="vertical"                    android:id="@+id/codes_vibration">                </LinearLayout>            </LinearLayout>        </ScrollView>        <LinearLayout            android:layout_width="0dp"            android:layout_weight="1"            android:layout_height="match_parent"            android:orientation="vertical"            android:background="#5E5E5E"            android:layout_marginBottom="3dp">            <TextView                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_weight="1"                android:background="@drawable/totop_"                android:textColor="#FFFFFF"                android:gravity="center"                android:textSize="20dp"                android:id="@+id/top_line_vibration"                android:clickable="true"/>            <TextView                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_weight="1"                android:background="@drawable/previous_"                android:textColor="#FFFFFF"                android:gravity="center"                android:textSize="20dp"                android:id="@+id/previous_line_vibration"                android:clickable="true"/>            <TextView                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_weight="1"                android:background="@drawable/current_"                android:textColor="#FFFFFF"                android:gravity="center"                android:textSize="20dp"                android:id="@+id/current_line_vibration"                android:clickable="true"/>            <TextView                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_weight="1"                android:background="@drawable/next_"                android:textColor="#FFFFFF"                android:gravity="center"                android:textSize="20dp"                android:id="@+id/next_line_vibration"                android:clickable="true"/>            <TextView                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_weight="1"                android:gravity="center"                android:textSize="20dp"                android:background="@drawable/toend_"                android:textColor="#FFFFFF"                android:id="@+id/end_line_vibration"                android:clickable="true"/>        </LinearLayout>    </LinearLayout></LinearLayout>