<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/video_play_top_scroll"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:scrollbars="none" >    <LinearLayout        android:layout_width="wrap_content"        android:layout_height="match_parent"        android:background="#B7B7B7"        android:focusable="true"        android:focusableInTouchMode="true"        android:orientation="horizontal" >        <FrameLayout            android:id="@+id/vPlayerLLayout"            android:layout_width="600dp"            android:layout_height="match_parent"            android:background="#B7B7B7" >            <SurfaceView                android:id="@+id/sv_video_play"                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_marginTop="1dp" />            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_marginTop="1dp"                android:orientation="vertical" >                <TextView                    android:id="@+id/buffer_percent"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_alignParentTop="true"                    android:layout_marginLeft="15dp"                    android:textColor="#FFFFFF"                    android:textSize="16sp" />                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_alignParentBottom="true"                    android:alpha="0.7"                    android:background="#5E5E5E"                    android:gravity="center_vertical"                    android:orientation="vertical" >                    <SeekBar                        android:id="@+id/seekbar_video"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginLeft="8dp"                        android:layout_marginRight="8dp"                        android:maxHeight="5dp"                        android:minHeight="5dp"                        android:progressDrawable="@drawable/seekbar"                        android:thumb="@drawable/seekbar_thumb"                        android:thumbOffset="0dp" />                    <LinearLayout                        android:id="@+id/vplaytoolbar"                        android:layout_width="match_parent"                        android:layout_height="40dp"                        android:orientation="horizontal" >                        <TextView                            android:id="@+id/timeview_video_play"                            android:layout_width="0dp"                            android:layout_height="match_parent"                            android:layout_weight="1.5"                            android:background="@drawable/tool_button"                            android:gravity="center"                            android:text="@string/time_player"                            android:textColor="#FFFFFF"                            android:textSize="14sp" />                        <ImageButton                            android:id="@+id/play_previous_video"                            android:layout_width="0dp"                            android:layout_height="match_parent"                            android:layout_weight="1"                            android:background="@drawable/tool_button"                            android:clickable="true"                            android:scaleType="fitCenter"                            android:src="@drawable/play_previous"                            android:textColor="#FFFFFF" />                        <ImageButton                            android:id="@+id/play_video"                            android:layout_width="0dp"                            android:layout_height="match_parent"                            android:layout_weight="1"                            android:background="@drawable/tool_button"                            android:clickable="true"                            android:scaleType="fitCenter"                            android:src="@drawable/play"                            android:textColor="#FFFFFF" />                        <ImageButton                            android:id="@+id/play_next_video"                            android:layout_width="0dp"                            android:layout_height="match_parent"                            android:layout_weight="1"                            android:background="@drawable/tool_button"                            android:clickable="true"                            android:scaleType="fitCenter"                            android:src="@drawable/play_next"                            android:textColor="#FFFFFF" />                        <ImageButton                            android:id="@+id/replay_video"                            android:layout_width="0dp"                            android:layout_height="match_parent"                            android:layout_weight="1"                            android:background="@drawable/tool_button"                            android:clickable="true"                            android:scaleType="fitCenter"                            android:src="@drawable/replay"                            android:textColor="#FFFFFF" />                        <ImageButton                            android:id="@+id/list_in_out_vp"                            android:layout_width="0dp"                            android:layout_height="fill_parent"                            android:layout_weight="1"                            android:background="@drawable/tool_button"                            android:scaleType="fitCenter"                            android:src="@drawable/play_next"                            android:textColor="#FFFFFF" />                    </LinearLayout>                </LinearLayout>            </RelativeLayout>            <ListView                android:id="@+id/codes_list_video_play2"                android:layout_width="200dp"                android:layout_height="match_parent"                android:layout_gravity="right"                android:layout_marginBottom="56dp"                android:layout_marginTop="1dp" />        </FrameLayout>        <LinearLayout            android:id="@+id/vPlayerRLayout"            android:layout_width="300dp"            android:layout_height="match_parent"            android:background="#FFFFFF"            android:orientation="vertical" >            <TextView                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:background="#5E5E5E"                android:gravity="center"                android:text="G代码流"                android:textColor="#FFFFFF"                android:textSize="22sp" />            <LinearLayout                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_weight="12"                android:background="#FFFFFF"                android:orientation="horizontal" >                <ListView                    android:id="@+id/codes_list_video_play"                    android:layout_width="0dp"                    android:layout_height="match_parent"                    android:layout_margin="3dp"                    android:layout_weight="8"                    android:background="#FFFFFF"                    android:focusable="true" />            </LinearLayout>        </LinearLayout>    </LinearLayout></HorizontalScrollView>