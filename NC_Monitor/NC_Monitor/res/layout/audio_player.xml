<HorizontalScrollView    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:id="@+id/audio_play_top_scroll"    android:scrollbars="none" >        <LinearLayout        android:layout_width="wrap_content"        android:layout_height="fill_parent"        android:background="#B7B7B7"        android:orientation="horizontal" >                <LinearLayout            android:id="@+id/aPlayerLLayout"            android:layout_width="300dp"            android:layout_height="fill_parent"            android:background="#B7B7B7"            android:orientation="vertical" >                        <FrameLayout                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_marginBottom="2dp"                android:layout_marginTop="1dp"                android:layout_weight="15" >                <com.example.draw.ResonanceVI                    android:id="@+id/resonanceVI1"                    android:layout_width="match_parent"                    android:layout_height="match_parent" />                <com.example.draw.PlayVI                    android:id="@+id/monitorVI1"                    android:layout_width="match_parent"                    android:layout_height="match_parent" />                <ListView                    android:id="@+id/codes_list_audio_play2"                    android:layout_marginTop="10dp"                    android:layout_marginBottom="15dp"	                android:layout_width="200dp"	                android:layout_height="match_parent"	                android:layout_gravity="right"/>            </FrameLayout>                        <LinearLayout                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_weight="1"                android:background="#5E5E5E"                android:gravity="center_vertical"                android:orientation="vertical" >                                <SeekBar                    android:id="@+id/seekbar_audio_play"                    android:layout_width="fill_parent"                    android:layout_height="wrap_content"                    android:layout_marginLeft="8dp"                    android:layout_marginRight="8dp"                    android:max="10000"                    android:maxHeight="5dp"                    android:minHeight="5dp"                    android:progressDrawable="@drawable/seekbar"                    android:thumb="@drawable/seekbar_thumb"                    android:thumbOffset="0dp" />            </LinearLayout>                        <LinearLayout                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_weight="1.8"                android:background="#B7B7B7"                android:orientation="horizontal" >                                <TextView                    android:id="@+id/timeview_audio_play"                    android:layout_width="0dp"                    android:layout_height="fill_parent"                    android:layout_weight="1.5"                    android:background="@drawable/tool_button"                    android:gravity="center"                    android:text="@string/time_player"                    android:textColor="#FFFFFF"                    android:textSize="14sp" />                                <ImageButton                    android:id="@+id/seek_back"                    android:layout_width="0dp"                    android:layout_height="fill_parent"                    android:layout_weight="1"                    android:background="@drawable/tool_button"                    android:clickable="true"                    android:scaleType="fitCenter"                    android:src="@drawable/play_previous"                    android:textColor="#FFFFFF" />                                <ImageButton                    android:id="@+id/play_audio"                    android:layout_width="0dp"                    android:layout_height="fill_parent"                    android:layout_weight="1"                    android:background="@drawable/tool_button"                    android:clickable="true"                    android:scaleType="fitCenter"                    android:src="@drawable/play"                    android:textColor="#FFFFFF" />                                <ImageButton                    android:id="@+id/seek_forward"                    android:layout_width="0dp"                    android:layout_height="fill_parent"                    android:layout_weight="1"                    android:background="@drawable/tool_button"                    android:clickable="true"                    android:scaleType="fitCenter"                    android:src="@drawable/play_next"                    android:textColor="#FFFFFF" />                                <ImageButton                    android:id="@+id/replay_audio"                    android:layout_width="0dp"                    android:layout_height="fill_parent"                    android:layout_weight="1"                    android:background="@drawable/tool_button"                    android:clickable="true"                    android:scaleType="fitCenter"                    android:src="@drawable/replay"                    android:textColor="#FFFFFF" />                                <ImageButton                    android:id="@+id/other_commands_audio_play"                    android:layout_width="0dp"                    android:layout_height="fill_parent"                    android:layout_weight="1"                    android:background="@drawable/tool_button"                    android:scaleType="fitCenter"                    android:src="@drawable/other_commands"                    android:textColor="#FFFFFF" />                                <ImageButton                    android:id="@+id/list_in_out_ap"                    android:layout_width="0dp"                    android:layout_height="fill_parent"                    android:layout_weight="1"                    android:background="@drawable/tool_button"                    android:scaleType="fitCenter"                    android:src="@drawable/play_next"                    android:textColor="#FFFFFF" />            </LinearLayout>        </LinearLayout>                <LinearLayout            android:id="@+id/aPlayerRLayout"            android:layout_width="300dp"            android:layout_height="fill_parent"            android:background="#5e5e5e"            android:orientation="vertical" >                        <TextView                android:layout_width="fill_parent"                android:layout_height="wrap_content"                android:background="#5E5E5E"                android:gravity="center"                android:text="G代码流"                android:textColor="#FFFFFF"                android:textSize="22sp" />                        <LinearLayout                android:layout_width="fill_parent"                android:layout_height="fill_parent"                android:background="#FFFFFF"                android:orientation="horizontal" >                                <ListView                    android:id="@+id/codes_list_audio_play"                    android:layout_width="0dp"                    android:layout_height="fill_parent"                    android:layout_margin="3dp"                    android:layout_weight="8"                    android:background="#FFFFFF"/>            </LinearLayout>        </LinearLayout>    </LinearLayout></HorizontalScrollView>